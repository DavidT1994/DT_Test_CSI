@model DavidToveyCSIMedia.Models.Sort

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sort</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Sequence" class="control-label"></label>
                <input asp-for="Sequence" class="form-control" />
                <span asp-validation-for="Sequence" class="text-danger"></span>
                <p>Please enter a comma separated list of numbers</p>
            </div>
            <div class="form-group">
                <label asp-for="Direction" class="control-label"></label><br />
                <label for="asc" class="control-label">Ascending</label>
                @Html.RadioButtonFor(model => model.Direction, "Asc", new{id="asc"})<br />
                <label for="desc" class="control-label">Descending</label>
                @Html.RadioButtonFor(model => model.Direction, "Desc", new{id="desc"})<br />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
